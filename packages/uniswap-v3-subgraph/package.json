{
    "type": "module",
    "private": true,
    "name": "uniswap-v3-subgraph",
    "scripts": {
        "generate-addresses-file": "tsx ./scripts/generate-addresses-file.ts",
        "codegen": "graph codegen",
        "build:only": "graph build",
        "build": "pnpm generate-addresses-file placeholder && pnpm codegen && graph build",
        "deploy:celo": "pnpm generate-addresses-file celo && graph deploy --product hosted-service --network celo metrom-xyz/uniswap-v3-celo",
        "lint": "eslint --ext .js,.ts ./ && prettier --check './**/*.{json,md}'",
        "format": "eslint --fix --ext .js,.ts ./ && prettier --write './**/*.{json,md}'"
    },
    "dependencies": {
        "@graphprotocol/graph-cli": "0.68.5",
        "@graphprotocol/graph-ts": "0.32.0"
    },
    "devDependencies": {
        "@types/node": "^20.11.24",
        "@typescript-eslint/eslint-plugin": "^7.1.1",
        "@typescript-eslint/parser": "^7.1.1",
        "eslint": "^8.57.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-config-turbo": "^1.12.5",
        "eslint-plugin-prettier": "^5.1.3",
        "prettier": "^3.2.5",
        "tsx": "^4.7.1"
    }
}
