{
    "include": ["./src/**/*", "src/types/liquity-v2.ts"],
    "compilerOptions": {
        "composite": true,
        "target": "ESNext",
        "module": "ESNext",
        "strict": true,
        "noUnusedLocals": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "moduleResolution": "Bundler",
        "skipLibCheck": true,
        "verbatimModuleSyntax": true,
        "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.lib.tsbuildinfo",
        "baseUrl": ".",
        "rootDir": "src",
        "lib": ["DOM", "ESNext"],
        "noEmit": false,
        "declaration": true,
        "emitDeclarationOnly": true,
        "declarationDir": "dist"
    }
}
