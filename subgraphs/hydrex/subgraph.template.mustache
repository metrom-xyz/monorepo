specVersion: 1.0.0
indexerHints:
  prune: {{pruningBlocks}}
schema:
  file: ./schema.graphql
dataSources:
  - kind: ethereum
    name: Factory
    network: {{network}}
    source:
      abi: Factory
      address: "{{factoryAddress}}"
      startBlock: {{factoryStartBlock}}
    mapping:
      kind: ethereum/events
      apiVersion: 0.0.7
      language: wasm/assemblyscript
      file: ./src/mappings/factory.ts
      entities: []
      abis:
        - name: Factory
          file: ./abis/Factory.json
        - name: Erc20
          file: ./abis/Erc20.json
        - name: Erc20BytesName
          file: ./abis/Erc20BytesName.json
        - name: Erc20BytesSymbol
          file: ./abis/Erc20BytesSymbol.json
      eventHandlers:
        - event: Pool(indexed address,indexed address,address)
          handler: handlePoolCreated
  - kind: ethereum/contract
    name: NonFungiblePositionManager
    network: {{network}}
    source:
      abi: NonFungiblePositionManager
      address: "{{nftPositionManagerAddress}}"
      startBlock: {{nftPositionManagerStartBlock}}
    mapping:
      kind: ethereum/events
      apiVersion: 0.0.7
      language: wasm/assemblyscript
      file: ./src/mappings/non-fungible-position-manager.ts
      entities: []
      abis:
        - name: NonFungiblePositionManager
          file: ./abis/NonFungiblePositionManager.json
        - name: Factory
          file: ./abis/Factory.json
      eventHandlers:
        - event: IncreaseLiquidity(indexed
            uint256,uint128,uint128,uint256,uint256,address)
          handler: handleIncreaseLiquidity
        - event: DecreaseLiquidity(indexed uint256,uint128,uint256,uint256)
          handler: handleDecreaseLiquidity
        - event: Transfer(indexed address,indexed address,indexed uint256)
          handler: handleTransfer
  - kind: ethereum/contract
    name: Voter
    network: {{network}}
    source:
      abi: Voter
      address: "{{voterAddress}}"
      startBlock: {{voterStartBlock}}
    mapping:
      kind: ethereum/events
      apiVersion: 0.0.7
      language: wasm/assemblyscript
      file: ./src/mappings/voter.ts
      entities: []
      abis:
        - name: Voter
          file: ./abis/Voter.json
        - name: Factory
          file: ./abis/Factory.json
      eventHandlers:
        - event: GaugeCreated(indexed address,address,address,indexed address,indexed address)
          handler: handleGaugeCreated
templates:
  - kind: ethereum/contract
    name: Pool
    network: {{network}}
    source:
      abi: Pool
    mapping:
      kind: ethereum/events
      apiVersion: 0.0.7
      language: wasm/assemblyscript
      file: ./src/mappings/pool.ts
      entities: []
      abis:
        - name: Pool
          file: ./abis/UnifiedPool.json
      eventHandlers:
        - event: Initialize(uint160,int24)
          handler: handleInitialize
        - event: Fee(uint16)
          handler: handleFee
        - event: Swap(indexed address,indexed address,int256,int256,uint160,uint128,int24)
          handler: handleSwapV1_0
        - event: Swap(indexed address,indexed address,int256,int256,uint160,uint128,int24,uint24,uint24)
          handler: handleSwapV1_2
        - event: Mint(address,indexed address,indexed int24,indexed int24,uint128,uint256,uint256)
          handler: handleMint
        - event: Burn(indexed address,indexed int24,indexed int24,uint128,uint256,uint256)
          handler: handleBurnV1_0
        - event: Burn(indexed address,indexed int24,indexed int24,uint128,uint256,uint256,uint24)
          handler: handleBurnV1_2
