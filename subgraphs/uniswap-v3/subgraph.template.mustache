specVersion: 1.0.0
indexerHints:
  prune: {{pruningBlocks}}
schema:
  file: ./schema.graphql
dataSources:
  # Uniswap V4 - Singleton PoolManager
  - kind: ethereum
    name: PoolManager
    network: {{network}}
    source:
      abi: PoolManager
      address: "{{poolManagerAddress}}"
      startBlock: {{poolManagerStartBlock}}
    mapping:
      kind: ethereum/events
      apiVersion: 0.0.7
      language: wasm/assemblyscript
      file: ./src/mappings/pool-manager.ts
      entities:
        - Pool
        - Token
        - Hook
        - Position
        - SwapChange
        - LiquidityChange
        - FeeChange
        - PoolInitialization
      abis:
        - name: PoolManager
          file: ./abis/PoolManager.json
        - name: Erc20
          file: ./abis/Erc20.json
        - name: Erc20BytesName
          file: ./abis/Erc20BytesName.json
        - name: Erc20BytesSymbol
          file: ./abis/Erc20BytesSymbol.json
      eventHandlers:
        - event: Initialize(indexed bytes32,indexed address,indexed address,uint24,int24,address,uint160,int24)
          handler: handleInitialize
        - event: Swap(indexed bytes32,indexed address,int128,int128,uint160,uint128,int24,uint24)
          handler: handleSwap
        - event: ModifyLiquidity(indexed bytes32,indexed address,int24,int24,int256,bytes32)
          handler: handleModifyLiquidity



