{
    "type": "module",
    "private": true,
    "name": "curve-subgraph",
    "scripts": {
        "prepare:deploy": "tsx ./scripts/prepare-deploy.ts",
        "codegen": "graph codegen",
        "create:local": "graph create metrom-curve-local --node http://localhost:8020",
        "deploy:local": "npm prepare:deploy mainnet && npm codegen && graph deploy metrom-curve-local --node http://localhost:8020 --ipfs http://localhost:5001 -l 0.0.1",
        "deploy:mainnet": "npm prepare:deploy mainnet && npm codegen && graph deploy metrom-curve-mainnet -l 0.0.130",
        "lint": "eslint .",
        "format": "eslint --fix ."
    },
    "dependencies": {
        "@0xgraph/cli": "^0.2.1",
        "@graphprotocol/graph-cli": "^0.98.1",
        "@graphprotocol/graph-ts": "0.38.1"
    },
    "devDependencies": {
        "@eslint/js": "^9.34.0",
        "@types/mustache": "^4.2.6",
        "@types/node": "^24.3.1",
        "eslint": "^9.34.0",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-prettier": "^5.5.4",
        "mustache": "^4.2.0",
        "prettier": "^3.6.2",
        "tsx": "^4.20.5",
        "typescript": "^5.9.2",
        "typescript-eslint": "^8.42.0",
        "viem": "^2.37.3"
    }
}
