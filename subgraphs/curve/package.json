{
    "type": "module",
    "private": true,
    "name": "curve-subgraph",
    "scripts": {
        "prepare:deploy": "tsx ./scripts/prepare-deploy.ts",
        "codegen": "graph codegen",
        "create:local": "graph create metrom-curve-local --node http://localhost:8020",
        "deploy:local": "pnpm prepare:deploy mainnet && pnpm codegen && graph deploy metrom-curve-local --node http://localhost:8020 --ipfs http://localhost:5001 -l 0.0.1",
        "deploy:mainnet": "pnpm prepare:deploy mainnet && pnpm codegen && graph deploy metrom-curve-mainnet -l 0.0.130",
        "lint": "eslint .",
        "format": "eslint --fix ."
    },
    "dependencies": {
        "@0xgraph/cli": "^0.2.1",
        "@graphprotocol/graph-cli": "^0.97.0",
        "@graphprotocol/graph-ts": "0.36.0"
    },
    "devDependencies": {
        "@eslint/js": "^9.26.0",
        "@types/mustache": "^4.2.6",
        "@types/node": "^22.15.18",
        "eslint": "^9.26.0",
        "eslint-config-prettier": "^10.1.5",
        "eslint-plugin-prettier": "^5.4.0",
        "mustache": "^4.2.0",
        "prettier": "^3.5.3",
        "tsx": "^4.19.4",
        "typescript": "^5.8.3",
        "typescript-eslint": "^8.32.1",
        "viem": "^2.26.2"
    }
}
